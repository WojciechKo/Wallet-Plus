<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/tagStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <!-- TODO: Zmienić na TextView z obrazkiem -->
        <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

            <TextView android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView android:id="@+id/incomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowup"/>
        </LinearLayout>

        <!-- TODO: Zmienić na TextView z obrazkiem -->
        <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

            <TextView android:id="@+id/expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView android:id="@+id/expenseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowdown"/>
        </LinearLayout>

    </LinearLayout>

    <TextView android:id="@+id/tagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tagStats"/>

</RelativeLayout>