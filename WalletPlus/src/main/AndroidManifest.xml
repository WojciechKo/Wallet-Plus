<?xml version="1.0" encoding="utf-8"?>
<manifest
        package="info.korzeniowski.walletplus"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:installLocation="auto">

    <application
            android:name=".WalletPlus"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher_walletplus"
            android:label="@string/appName"
            android:supportsRtl="false"
            android:theme="@style/WalletPlusTheme">
        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>

        <activity
                android:name=".ui.dashboard.DashboardActivity"
                android:label="@string/appName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.mywallets.list.MyWalletListActivity"
                android:label="@string/walletListLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>

        <activity
                android:name=".ui.mywallets.details.MyWalletDetailsActivity"
                android:label="@string/title_activity_wallet_details"
                android:parentActivityName=".ui.mywallets.list.MyWalletListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.mywallets.list.MyWalletListActivity"/>
        </activity>

        <activity
                android:name=".ui.otherwallets.list.OtherWalletListActivity"
                android:label="@string/walletListLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>

        <activity
                android:name=".ui.otherwallets.details.OtherWalletDetailsActivity"
                android:label="@string/title_activity_wallet_details"
                android:parentActivityName=".ui.otherwallets.list.OtherWalletListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.otherwallets.list.OtherWalletListActivity"/>
        </activity>

        <activity
                android:name=".ui.cashflow.list.CashFlowListActivity"
                android:label="@string/walletListLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>

        <activity
                android:name=".ui.cashflow.details.CashFlowDetailsActivity"
                android:label="@string/title_activity_wallet_details"
                android:parentActivityName=".ui.cashflow.list.CashFlowListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.cashflow.list.CashFlowListActivity"/>
        </activity>

        <activity
                android:name=".ui.category.list.CategoryListActivity"
                android:label="@string/categoryListLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>

        <activity
                android:name=".ui.category.details.CategoryDetailsActivity"
                android:label="@string/categoryDetailsLabel"
                android:parentActivityName=".ui.category.list.CategoryListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.category.list.CategoryListActivity"/>
        </activity>

        <activity
                android:name=".ui.synchronize.SynchronizeActivity"
                android:label="@string/synchronizeLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>

        <activity
                android:name=".ui.profile.ProfileActivity"
                android:label="@string/profileLabel"
                android:parentActivityName=".ui.dashboard.DashboardActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.dashboard.DashboardActivity"/>
        </activity>
    </application>
</manifest>
