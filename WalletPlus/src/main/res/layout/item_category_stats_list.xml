<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/category_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/categoryStats"
            android:layout_toStartOf="@+id/categoryStats"/>

    <LinearLayout android:id="@id/categoryStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <TextView android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>